<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eightsines.tgchallenge2019">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/core__app_icon"
        android:label="@string/core__app_name"
        android:name="com.eightsines.tgchallenge2019.App"
        android:roundIcon="@mipmap/core__app_icon"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.eightsines.tgchallenge2019.screen.statistics.StatisticsActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
